<!DOCTYPE html>
<html lang="en" dir="ltr">
<%- include ('../partials/head') %>
<body>
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  <script src="https://unpkg.com/moment"></script>
  <div class="container-fluid">
<div class="row subscriber-bg">
  <%- include ('../partials/sidemenu') %>
<div class="col-md-10 float-left col px-5 pl-md-2 pt-5" id="mainbar">
  <p class="topbox ml-3">ADD SESSION</p>
    <div class="row">
      <div class="col-md-9">
        <%if(error){%>
            <ul>
            <% for(err in error){ %>
              <li class="text-danger"><small><%=error[err].msg%></small></li>
            <%}%>
          </ul>
          <%}%>

        <%if(msg){%>
        <ul><li class="text-danger"><small><%=msg%></small></li></ul>

        <%}%>
        <form method="post" action="/modifysessions/<%=servid%>/<%=ses_id%>">

          <div class="form-row ml-3">
            <div class="col-5">
              <label for="validationDefault01">Session Start(eg.,2019-01-01T17:00:00)</label></div>
              <div class="col"><input type="text" class="form-control" id="startT" value="<%=data.start%>" name="session-start" required='true'>
            </div>
            <div class="col"><button class="btn blbutt"type="button" value="" onclick ="currentTime();">NOW</button>
          </div>
        </div>
          <div class="form-row ml-3">
            <div class="col-5">
              <label for="validationDefault01">Session Stop(eg.,2019-01-01T17:00:00)</label></div>
              <div class="col"><input type="text" class="form-control" id="size" value="<%=data.end%>" name="session-stop" required='true'>
            </div>
          </div>
          <div class="form-row ml-3">
            <div class="col-5">
              <label for="validationDefault01">Max-bitrate(kbps)</label></div>
              <div class="col"><input type="text" class="form-control" id="size" value="2" name="max-bitrate" required='true'>
            </div>
          </div>
          <div class="form-row ml-3">
            <div class="col-5">
              <label for="validationDefault01">Session-type</label></div>
              <div class="col"><input type="text" class="form-control" id="size" value="<%=data.session_type%>" name="session-type" required='true'>
            </div>
          </div>
          <!-- <div class="form-row ml-3">
            <div class="col-5">
              <label for="validationDefault01">Ingest-mode</label></div>
              <div class="col"><select class="form-control" id="size" name="ingest-mode">
                <option value="pull">Pull</option>
                <option value="push">Push</option>
              </select>
            </div>
          </div>
          <div class="form-row ml-3">
            <div class="col-5">
              <label for="validationDefault01">File URL</label></div>
              <div class="col"><input type="text" class="form-control" id="size" value="<%=data.file_url%>" name="file-url" required='true'>
            </div>
          </div> -->
          <div class="row ml-3">
            <div class="btn-group btn-group-md">
              <button class="btn blbutt mb-2 mr-3 mt-5" type="submit">Submit</button>
              <a href="/delete-session/<%=servid%>/<%=ses_id%>"><button type="button" class="btn delbutt mb-2 mt-5">Cancel</button></a>
            </div>
          </div>

        </form>
      </div>
      <div class="col-md-3"></div>
    </div>
  </div>
</div>
</div>

  <script type="text/javascript">
  function currentTime(){
    var time= moment().format("YYYY-MM-DDTHH:mm:ss");
    console.log(time);
    document.getElementById("startT").value = time;
  }
  </script>
</body>
</html>
