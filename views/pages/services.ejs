                  <td><%=data[i]["service-names"]%></td>
                  <td><%=data[i]["service-announcement-mode"]%></td>
                  <td><a href="/services/<%=id%>/sessions"><button type="button" class="btn sesbutt"><i class="fa fa-plus"></i> SESSION</button></a></td>
                  <td><a href="/services/<%=id%>/vsessions"><button type="button" class="btn sesbutt">VIEW SESSION</button></a></td>
                  <!-- <td><a href="/modify-service/<%=id%>"><button type="button" class="btn btn-info"><i class="fa fa-pencil-square-o"></i> Modify</button></a></td> -->
                  <td><a href="/deleteServ/<%=id%>"><button type="button" class="btn delbutt"><i class="fa fa-trash-o"></i> Delete</button></a></td>
                </tr>

            <%}
            }%>
          </tbody>
        </table>
      </div>      
    </div>
    </div>
